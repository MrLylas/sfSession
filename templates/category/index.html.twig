{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    {# {{ include('category/new.html.twig') }} #}
    <a href="{{ path('new_category') }}">New Category</a>
    <h1>Liste des Categories</h1>
    <div class="container">
    {% for category in categories %}
        <a href="{{ path('app_category_show', {'id': category.id}) }}">{{ category.name }}</a>
        <a href="{{ path('delete_category', {'id': category.id}) }}"> Delete</a>
        <a href="{{ path('edit_category', {'id': category.id}) }}">Edit</a><br>
        {% endfor %}
    </div>
{% endblock %}
