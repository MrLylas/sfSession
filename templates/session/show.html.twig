{% extends 'base.html.twig' %}

{% block title %}Session's details{% endblock %}

{% block body %}
    <div class="container">
        <h1>Session's details</h1>

        <h2>{{ session }}</h2>
        <p>{{ session.name() }}</p>
        <p>Nombres de places disponibles :{{ session.placesNb() }}</p>
        <p>Date de d√©but :{{ session.startDate()| date('d.m.Y') }}</p>
        <p> Date de fin :{{ session.endDate()| date('d.m.Y') }}</p>
        <a href="{{ path('edit_session', {'id': session.id}) }}">Edit</a><br><br>

        {% for program in session.programs %}
            <a href="{{ path('app_program_show', {'id': program.id}) }}">{{ program }}</a><br>
        {% endfor %}
    </div>
{% endblock %}